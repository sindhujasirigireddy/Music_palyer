<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/songNameTV"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:paddingLeft="5dp"
        android:layout_marginRight="120dp"
        android:paddingTop="8dp"
        android:textSize="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_alignBottom="@+id/playIB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/play"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:padding="8dp"
        android:id="@+id/playIB"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/AddToFavIB"
        android:layout_toStartOf="@+id/AddToFavIB" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:id="@+id/AddToFavIB"
        android:background="#00000000"
        android:src="@mipmap/like"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/artists"
        android:textSize="10dp"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/songNameTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/Duration"
        android:paddingTop="14dp"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/playIB"
        android:layout_toStartOf="@+id/playIB" />
</RelativeLayout>